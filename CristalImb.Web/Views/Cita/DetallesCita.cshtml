@model CristalImb.Model.Entities.Cita

@{
    ViewData["Title"] = "DetallesCita";
}

@section Styles{
    <style>
        .detalle {
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            margin-top: 5%;
        }

        .register-box {
            width: 420px;
            margin-left: auto;
            margin-right: auto;
        }
    </style>

    
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Log in</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/adminlte/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.min.css">
</head>
<body class="detalle">
    <div class="register-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a class="h1"><b>Detalle Cita</b></a>
            </div>
            <div class="card-body">

                <form asp-action="DetallesCita">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CitaId" />
                    <div class="form-group">
                        <label class="control-label">Código Inmueble: @Model.inmuebles.Codigo</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Servicio inmueble: @Model.serviciosInmueble.Nombre</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Identificacion: @Model.Identificacion</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Nombre: @Model.Nombre</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Apellido: @Model.Apellido</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Télefono: @Model.Telefono</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Correo: @Model.Correo</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Dirección: @Model.Direccion</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Fecha: @Model.FechaHora</label>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Estado Cita: @Model.estadoCita.Nombre</label>
                    </div>
                    <a asp-action="IndexCita">Volver</a>
                </form>
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
    <!-- /.register-box -->
    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/adminlte.min.js"></script>
</body>
</html>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<!-- REQUIRED SCRIPTS -->
<!-- jQuery -->
<script src="~/adminlte/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="~/adminlte/dist/js/adminlte.min.js"></script>



