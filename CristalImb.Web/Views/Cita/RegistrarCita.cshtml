@model CristalImb.Model.Entities.Cita

@{
    ViewData["Title"] = "RegistrarCita";
    Layout = null;
}


    <div class="row">
        <div class="col-md-10">
            <div class="registrar">
                <form asp-action="RegistrarCita">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="InmuebleId" class="control-label">Inmueble</label>
                        <select asp-items="ViewBag.ListaInmuebles" asp-for="InmuebleId" class="form-control"></select>
                        <span asp-validation-for="InmuebleId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Identificacion" class="control-label">Identificación <b class="text-danger">*</b></label>
                        <input asp-for="Identificacion" class="form-control" />
                        <span asp-validation-for="Identificacion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label">Nombre <b class="text-danger">*</b></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Apellido" class="control-label">Apellido <b class="text-danger">*</b></label>
                        <input asp-for="Apellido" class="form-control" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label">Teléfono <b class="text-danger">*</b></label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Correo" class="control-label">Correo <b class="text-danger">*</b></label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Direccion" class="control-label">Dirección <b class="text-danger">*</b></label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                        <label asp-for="Fecha" class="control-label">Fecha <b class="text-danger">*</b></label>
                        <input asp-for="Fecha" id="datepicker" class="datepicker form-control" readonly />
                        <span asp-validation-for="Fecha" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Hora" class="control-label">Hora <b class="text-danger">*</b></label>
                        <input asp-for="Hora" id="timepicker" class="timepicker form-control" readonly />
                        <span asp-validation-for="Hora" class="text-danger"></span>
                    </div>*@
                    <div class="form-group">
                        <label asp-for="FechaHora" class="control-label">Fecha y hora de la cita <b class="text-danger">*</b></label>
                        <input asp-for="FechaHora" id="datetimepicker" class="datetimepicker form-control" readonly />
                        <span asp-validation-for="FechaHora" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Registrar" class="btn btn-primary" />
                    </div>
                </form>
                <div>
                    <a asp-action="IndexCita">Volver</a>
                </div>
            </div>
        </div>
    </div>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


<script>
    $(function () {
        $("#datepicker").datepicker();
    });

    $(document).ready(function () {
        $("#timepicker").timepicker();
    });

    $('.timepicker').timepicker({
        timeFormat: 'h:mm p',
        interval: 120,
        minTime: '10',
        maxTime: '6:00pm',
        defaultTime: '11',
        startTime: '10:00',
        dynamic: false,
        dropdown: true,
        scrollbar: true
    });

    $("#datetimepicker").datetimepicker({
        format: 'Y-m-d H:i:i',
        formatTime: 'H:i:i',
        formatDate: 'Y-m-d',
        interval: 60
    });
</script>