@model CristalImb.Web.ViewModels.Zonas.ZonasViewModel

@{
    ViewData["Title"] = "RegistrarZona";
    Layout = null;
}


<div class="row">
    <div class="col-md-10">
        <div class="registrar">
            <form asp-action="RegistrarZona">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NombreZona" class="control-label"></label>
                    <input asp-for="NombreZona" class="form-control" />
                    <span asp-validation-for="NombreZona" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Registrar" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="IndexZona">Volver</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}