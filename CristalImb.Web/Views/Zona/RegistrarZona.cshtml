@model CristalImb.Web.ViewModels.Zonas.ZonasViewModel

@{
    ViewData["Title"] = "RegistrarZona";
    Layout = null;
}

<div class="row">
    <div class="registrar col-md-12">
        <form asp-action="RegistrarZona">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-12 row">
                <div class="form-group col-md-12">
                    <label asp-for="NombreZona" class="control-label">Nombre <b class="text-danger">*</b></label>
                    <input asp-for="NombreZona" class="form-control" />
                    <span asp-validation-for="NombreZona" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
            <div>
                <a asp-action="IndexZona">Volver</a>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}