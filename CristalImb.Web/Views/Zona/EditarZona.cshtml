@model CristalImb.Web.ViewModels.Zonas.ZonasViewModel

@{
    ViewData["Title"] = "EditarZona";
    Layout = null;
}

@section Styles{
    <style>
        .editar {
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            margin-top: 5%;
        }
    </style>
}

<div class="row">
    <div class="registrar col-md-12">
        <div class="editar">
            <h1>Editar zona</h1>
            <hr />
            <form asp-action="EditarZona">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ZonaId" />
                <div class="form-group">
                    <label asp-for="NombreZona" class="control-label"></label>
                    <input asp-for="NombreZona" class="form-control" />
                    <span asp-validation-for="NombreZona" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="IndexZona">Volver</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}