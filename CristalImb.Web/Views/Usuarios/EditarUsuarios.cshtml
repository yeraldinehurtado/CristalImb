@model CristalImb.Business.Dtos.Usuarios.UsuarioDto



@{
    ViewData["Title"] = "Editar usuario";
    Layout = null;
}

@section Styles{
    <style>
        .contenido {
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            text-align: center;
            margin-bottom: 5%;
        }

        tr td {
            font-family: 'Times New Roman', Times, serif;
            font-size: 18px;
            color: #08006f;
        }
    </style>
}

<!-- Content Wrapper. Contains page content -->
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditarUsuarios" id="formulario" name="formulario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UsuarioId" />
            <div class="form-group">
                <label asp-for="Identificacion" class="control-label"></label>
                <input asp-for="Identificacion" class="form-control" />
                <span asp-validation-for="Identificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rol" class="control-label">Rol</label>
                <select asp-items="ViewBag.ListaRoles" asp-for="Rol" class="form-control"></select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="IndexUsuarios">Volver</a>
        </div>
    </div>
    <!-- /.col-md-6 -->
</div>
<!-- /.row -->
<!-- /.content-wrapper -->

<script>
    document.getElementById("ListaRoles").selectedIndex = -1;
</script>

@section Scripts {
}


@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

