@model List<string>


@{
    ViewData["Title"] = "Detalle";
    Layout = null;
}


<div class="content">

    <div class="container-fluid">

        <h3 class="text-center">Usuario: <b>@ViewBag.NombreUsuario</b></h3>
        <hr />

        <div class="container">
            <div class="row">
                <div class="col-12">
                    @if (Model.Count == 0)
                    {
                        <p>No existen roles</p>
                    }
                    else
                    {
                        <h3 class="text-center">Roles</h3>
                        <hr />
                        <table class="table" id="tabla">
                            <thead>
                                <tr>
                                    <th>Rol</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var rol in Model)
                                {
                                    <tr>
                                        <td>@rol</td>
                                        <td>
                                            <a class="btn btn-outline-danger" asp-route-rol="@rol" asp-route-usuarioId="@ViewBag.UsuarioId" asp-action="EliminarRolUsuario"
                                               onclick="return confirm('Desea remover el rol al usuario?')">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <script src="~/js/modals.js"></script>


}