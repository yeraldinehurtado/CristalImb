@model IEnumerable<CristalImb.Model.Entities.InmuebleDetalleArchivos>

@{
    ViewData["Title"] = "Pagina inicio";
    Layout = "_Landing";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/scripts/jquery-3.3.1.min.js"></script>
<script src="~/scripts/bootstrap.min.js"></script>
<link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />
<style>
    .carousel-inner img {
        width: 100%;
        height: 350px;
    }
</style>
<section class="page-section" id="services">
    <div class="card-header">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Inmuebles en oferta.</h2>
        </div>
        <div class="row" id="oferta" asp-action="IndexLanding">
            <div id="demo" class="carousel slide" data-ride="carousel">
                <ul class="carousel-indicators">
                    <li data-target="#demo" data-slide-to="0" class="active"></li>
                    <li data-target="#demo" data-slide-to="1"></li>
                    <li data-target="#demo" data-slide-to="2"></li>
                </ul>
                <div class="carousel-inner" role="listbox">
                    @{int i = 0;}
                    @foreach (var x in Model)
                    {
                        i++;
                        var active = i == 1 ? "active" : "";
                        <div class="carousel-item @active" style="width: 25rem; right: 1px; border-right-width: 30px; border-color: #FFFF; border-bottom-width: 20px;">
                            <img class="card-img-top" src="@("~/imagenesInmueble/" + x.NombreArchivo)" asp-append-version="true" style="height: 250px; width: 390px; margin-left:auto; margin-right:auto;" />
                            <div class="card-body">
                                <h5 class="card-title text-center">@Html.DisplayFor(modelx => x.Inmueble.Codigo) - $ @Html.DisplayFor(modelx => x.Inmueble.Valor)</h5>
                                <p class="card-text text-center">@Html.DisplayFor(modelx => x.Inmueble.Direccion) - @Html.DisplayFor(modelx => x.Inmueble.Zona.NombreZona)</p>
                                <p class="card-text text-center">@Html.DisplayFor(modelx => x.Inmueble.Descripcion)</p>
                            </div>
                        </div>

                    }

                </div>
                <a class="carousel-control-prev" href="#demo" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </a>
                <a class="carousel-control-next" href="#demo" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </a>
            </div>
        </div>

    </div>
</section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

