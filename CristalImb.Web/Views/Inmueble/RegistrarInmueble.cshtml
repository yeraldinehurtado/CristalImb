@model CristalImb.Web.ViewModels.Inmuebles.InmueblesViewModel

@{
    ViewData["Title"] = "RegistrarInmueble";
    Layout = null;
}

<div class="row">
    <div class="col-md-10">
        <div class="registrar">
            <form asp-action="RegistrarInmueble">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Codigo" class="control-label"></label>
                    <input asp-for="Codigo" class="form-control" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <textarea asp-for="Descripcion" class="form-control"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TipoId" class="control-label"></label>
                    <select asp-items="ViewBag.ListaTipos" asp-for="TipoId" class="form-control"></select>
                    <span asp-validation-for="TipoId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ServicioInmuebleId" class="control-label"></label>
                    <select asp-items="ViewBag.ListaServicios" asp-for="ServicioInmuebleId" class="form-control"></select>
                    <span asp-validation-for="ServicioInmuebleId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Valor" class="control-label"></label>
                    <input asp-for="Valor" class="form-control" id="number"/>
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Area" class="control-label"></label>
                    <input asp-for="Area" class="form-control" />
                    <span asp-validation-for="Area" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="ZonaId" class="control-label"></label>
                    <select asp-items="ViewBag.listaZona" asp-for="ZonaId" class="form-control"></select>
                    <span asp-validation-for="ZonaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdEstadoInm" class="control-label"></label>
                    <select asp-items="ViewBag.ListaEstadosInm" asp-for="IdEstadoInm" class="form-control"></select>
                    <span asp-validation-for="IdEstadoInm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Direccion" class="control-label"></label>
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="oferta" class="control-label"></label>
                    <input asp-for="oferta" class="form-control" />
                    <span asp-validation-for="oferta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Registrar" class="btn btn-primary" />
                </div>
            </form>
            <div>
                <a asp-action="IndexInmueble">Volver</a>
            </div>
        </div>
    </div>
</div>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
    </script>
}